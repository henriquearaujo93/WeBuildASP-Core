@model WeBuildASP.Models.ViewModels.EmployeeFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Employee</h4>
<hr />
<div cass="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Employee.ID" />
            <div class="form-group">
                <label asp-for="Employee.E_NAME" class="control-label"></label>
                <input asp-for="Employee.E_NAME" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Employee.E_LASTANAME" class="control-label"></label>
                <input asp-for="Employee.E_LASTANAME" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Employee.E_IMAGE" class="control-label"></label>
                <input asp-for="Employee.E_IMAGE" type="file" name="image" id="image" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Employee.E_NACIONALITY" class="control-label"></label>
                <input asp-for="Employee.E_NACIONALITY" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Employee.E_DTANAS" class="control-label"></label>
                <input asp-for="Employee.E_DTANAS" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Employee.E_TEAM" class="control-label"></label>
                <select asp-for="Employee.E_TEAM" asp-items="@(new SelectList(Model.Teams, "ID", "ID"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employee.E_ACTIVE" class="control-label"></label>
                <input asp-for="Employee.E_ACTIVE" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

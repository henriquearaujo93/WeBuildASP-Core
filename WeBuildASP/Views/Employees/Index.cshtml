@model IEnumerable<WeBuildASP.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a> <a asp-action="GoAdminMenu" class="btn btn-default">Home</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_NAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_LASTANAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_IMAGE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_NACIONALITY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_DTANAS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_TEAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_ACTIVE)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_LASTANAME)
            </td>
            <td>
                <img src="@Url.Action("GetImage", "Employees", new { id = item.ID })" alt="Image" style="width:100px; height: 100px; max-width: 100%; auto;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_NACIONALITY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_DTANAS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_TEAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_ACTIVE)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>

</table>

@model WeBuildASP.Models.ViewModels.LoanFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Loan.ID" />
            <div class="form-group">
                <label asp-for="Loan.L_AMOUNT" class="control-label"></label>
                <input asp-for="Loan.L_AMOUNT" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Loan.L_DTAIN" class="control-label"></label>
                <input asp-for="Loan.L_DTAIN" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Loan.L_DTAOU" class="control-label"></label>
                <input asp-for="Loan.L_DTAOU" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Loan.L_TEAM" class="control-label"></label>
                <select asp-for="Loan.L_TEAM" asp-items="@(new SelectList(Model.Teams, "ID", "ID"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>



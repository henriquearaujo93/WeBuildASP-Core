@model WeBuildASP.Models.ViewModels.ScheduleFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Schedule.ID" />
            <div class="form-group">
                <label asp-for="Schedule.S_WEEKDAYS" class="control-label"></label>
                <input asp-for="Schedule.S_WEEKDAYS" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Schedule.S_STARTT" class="control-label"></label>
                <input asp-for="Schedule.S_STARTT" type="time" step="2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Schedule.S_ENDT" class="control-label"></label>
                <input asp-for="Schedule.S_ENDT" type="time" step="2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Schedule.S_LUNCHT" class="control-label"></label>
                <input asp-for="Schedule.S_LUNCHT" type="time" step="2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Schedule.S_LUNCHIT" class="control-label"></label>
                <input asp-for="Schedule.S_LUNCHIT" type="time" step="2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Schedule.S_TEAM" class="control-label"></label>
                <select asp-for="Schedule.S_TEAM" asp-items="@(new SelectList(Model.Teams, "ID", "ID"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

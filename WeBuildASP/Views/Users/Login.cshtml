@model WeBuildASP.Models.User

@{
    try
    {
        if (TempData["InvalidLoginMessage"].ToString() != "")
        {
            <div class="alert alert-danger">
                <strong></strong> @TempData["InvalidLoginMessage"]
            </div>
        }
    }
    catch { }

    try
    {
        if (TempData["PermissionDenied"].ToString() != "")
        {
            <div class="alert alert-danger">
                <strong></strong> @TempData["PermissionDenied"]
            </div>
        }
    }
    catch { }

}
@ViewData["PermissionDenied"]
@ViewData["InvalidLoginMessage"]



<form asp-controller="Users" asp-action="ValidateLogin">
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="username" class="form-control" asp-for="U_USERNAME">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" asp-for="U_PASSWORD">
    </div>
    <div class="checkbox">
        <label><input type="checkbox"> Remember me</label>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

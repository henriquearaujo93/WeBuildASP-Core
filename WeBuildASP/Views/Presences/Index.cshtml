@model IEnumerable<WeBuildASP.Models.Presence>

@{
    ViewData["Title"] = "Presences";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a> <a asp-action="GoAdminMenu" class="btn btn-default">Home</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_REGISTERENTRY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_REGISTEROUT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_REGISTERENTRYLUNCH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_REGISTEROUTLUNCH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.P_EMPLOY)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_REGISTERENTRY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_REGISTEROUT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_REGISTERENTRYLUNCH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_REGISTEROUTLUNCH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_EMPLOY)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>



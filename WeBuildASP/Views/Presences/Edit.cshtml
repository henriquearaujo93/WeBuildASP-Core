@model WeBuildASP.Models.ViewModels.PresenceFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Presence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Presence.ID" />
            <div class="form-group">
                <label asp-for="Presence.P_REGISTERENTRY" class="control-label"></label>
                <input asp-for="Presence.P_REGISTERENTRY" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Presence.P_REGISTEROUT" class="control-label"></label>
                <input asp-for="Presence.P_REGISTEROUT" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Presence.P_REGISTERENTRYLUNCH" class="control-label"></label>
                <input asp-for="Presence.P_REGISTERENTRYLUNCH" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Presence.P_REGISTEROUTLUNCH" class="control-label"></label>
                <input asp-for="Presence.P_REGISTEROUTLUNCH" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Presence.P_EMPLOY" class="control-label"></label>
                <select asp-for="Presence.P_EMPLOY" asp-items="@(new SelectList(Model.Employees, "ID", "E_NAME"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

